
<div class="item">
    <div>Email</div>
        <div>
            <input 
                type="email" 
                name="email"
                placeholder="Digite se email"
                value="{{user.email}}" >
        </div>
    </div>
</div>

<div class="item">
    <div>Nova senha</div>
        <div>
            <input 
                type="password" 
                name="password"
                placeholder="Digite sua nova senha"
                value="{{user.password}}" >
        </div>
    </div>
</div>

<div class="item">
    <div>Repetir senha</div>
        <div>
            <input 
                type="password" 
                name="passwordRepeat"
                placeholder="Repita a nova senha"
                value="{{user.passwordRepeat}}" >
        </div>
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">
