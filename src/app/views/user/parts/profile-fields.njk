<div class="form">
            <section class="profile details">

                    <div class="item">
                        <div>Nome</div>
                            <div>
                                <input 
                                    type="text" 
                                    name="name"
                                    value="{{user.name}}" >
                            </div>
                    </div>

                    <div class="item">
                          <div>E-mail</div>
                         
                            <div>
                                <input 
                                    type="email" 
                                    name="email"
                                    value="{{user.email}}" >
                            </div>
                    </div>

                    <div class="item">
                          <div>Senha</div>
                         
                            <div>
                                <input 
                                    type="password" 
                                    name="password"
                                    placeholder="Digite sua senha">
                            </div>
                    </div>

                    
</section>


