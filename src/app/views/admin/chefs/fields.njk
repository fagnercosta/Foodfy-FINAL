<div class="form">
            <section class="details">
                                
                     <div class="item">
                        <div>Nome</div>
                            <div>
                                <input 
                                    type="text" 
                                    name="name"
                                    value="{{chef.name}}" >
                            </div>
                    </div>

                    <div class="item">
                        <div>Avatar</div>

                        <div >
                            <div id="photos-upload">
                                <input 
                                type="file" 
                                name="photos" 
                                id="photos-input" 
                                accept="image/*" 
                                onchange="PhotosUpload.apply('handleFileUploadChef', event)" 
                                >
                                <p>Enviar Avatar</p>
                            </div>
                            <div id="photos-preview">
                                {% if file %}
                                        <div class="photo" id="{{file.id}}">
                                            <img src="{{file.src}}" alt="{{file.name}}">
                                            <i class="material-icons" onclick="PhotosUpload.removePreviousPhoto(event)">
                                                close
                                            </i>
                                        </div>
                                    <input type="hidden" name="removed_files">
                                {% endif %}
                            </div>
                            
                    </div>

               
</section>